<div style="margin-top: 5px;">
        <h3 style="margin-left: 10%;margin-right: 10% ">Modificar novedad</h3>
        <form action="/admin/novedades/modificar" method="post" style="margin-top: 1px;">
            <input type="hidden" name="id" value="{{novedades.id}}" class="form-control" id="formGroupExampleInput" placeholder="Escribir Titulo" style="height: 50px;">

            <div class="mb-3" style="margin-left: 10%;margin-right: 10% ">
                <label for="formGroupExampleInput" class="form-label"></label>
                <input type="text" name="titulo" value="{{novedades.titulo}}" class="form-control" id="formGroupExampleInput" placeholder="Escribir Titulo" style="height: 50px;">
            </div>
            <div class="mb-3" style="margin-left: 10%;margin-right: 10%;margin-top:5px;">
                <label for="formGroupExampleInput2" class="form-label"></label>
                <input type="text" name="subtitulo" value="{{novedades.subtitulo}}" class="form-control" id="formGroupExampleInput2" placeholder="Modificar Subtitulo" style="height: 150px;">
            </div>

            <div class="mb-3" style="margin-left: 10%;margin-right: 10%,margin-top: 1px;">
                <label for="formGroupExampleInput2" class="form-label"></label>
                <input type="text" name="cuerpo" value="{{novedades.cuerpo}}" class="form-control" id="formGroupExampleInput2" placeholder="Modificar Cuerpo" style="height: 150px;">
            </div>

            <button type="submit" class="btn btn-danger" style="margin-left: 90%;">Modificar</button>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}

</div>